def makeAnagrams(a, b):
    dlist=[]
    longer=None
    shorter=None
    
    if len(a)>len(b):
        longer=a
        shorter=b
    elif len(b)>len(a):
        longer=b
        shorter=a
    elif len(b)==len(a):
        longer=a
        shorter=b
        
    prelonger=longer
    
    for x in shorter:
        for k in longer:
            if x == k:
                dlist.append(x)
                remove=k
                # REMOVING MATCHED LETTER
                longer=longer.replace(k, "", 1)
                break
    
    aaa=len(shorter)-len(dlist)
    bbb=len(prelonger)-len(dlist)
    final=aaa+bbb
    print(abs(final))
    
a="fcrxzwscanmligyxyvym"
b="jxwtrhvujlmrpdoqbisbwhmgpmeoke"

makeAnagrams(a, b)